<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_permissions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dell.ver_3.Permission"
    tools:showIn="@layout/activity_permission">



<TableLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
   android:padding="24dp"
   >


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"

        >
        <ImageView
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/lock_img"
            android:layout_weight="0"
            android:layout_column="1"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/device_admin_text"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_column="2"
            />

        <Switch
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:id="@+id/device_admin_switch"
            android:layout_marginRight="16dp"/>
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f6f6f6" />




    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"


        >
        <ImageView
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/phone_img"
            android:layout_weight="0"
            android:layout_column="1"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/phone_text"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_column="2"
            />

        <Switch
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:id="@+id/phone_permission_switch"
            android:layout_marginRight="16dp"/>
    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f6f6f6" />


</TableLayout>





</LinearLayout>


